@page
@model AsuncionPrelim.Pages.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Student Grading System</title>
</head>
<body>
    <h1>Student Grading System</h1>

    <form method="post">
        <h2>Student 1</h2>
        <label>Name:</label>
        <input type="text" asp-for="Student1.Name" />

        <label>Marks (comma-separated):</label>
        <input type="text" asp-for="Marks1" />

        <h2>Student 2</h2>
        <label>Name:</label>
        <input type="text" asp-for="Student2.Name" />

        <label>Marks (comma-separated):</label>
        <input type="text" asp-for="Marks2" />

        <button type="submit" asp-page-handler="Calculate">Calculate</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.TotalMarks1))
    {
        <h3>Results</h3>
        <p><strong>Student 1:</strong></p>
        <p>Total Marks: @Model.TotalMarks1</p>
        <p>Average Marks: @Model.AverageMarks1</p>

        <p><strong>Student 2:</strong></p>
        <p>Total Marks: @Model.TotalMarks2</p>
        <p>Average Marks: @Model.AverageMarks2</p>

        <h3>Comparison Result</h3>
        <p>@Model.ComparisonResult</p>
    }
</body>
</html>
